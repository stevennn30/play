<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="false">
        <shape>
            <corners
                android:radius="10dp"/>
            <padding
                android:bottom="10dp"
                android:left="10dp"
                android:right="10dp"
                android:top="10dp"/>
            <stroke
                android:color="@color/deepRed"
                android:width="2dp"/>
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape>
            <corners
                android:radius="10dp"/>
            <padding
                android:bottom="10dp"
                android:left="10dp"
                android:right="10dp"
                android:top="10dp"/>
            <stroke
                android:color="@color/white"
                android:width="1dp"/>
        </shape>
    </item>

</selector>